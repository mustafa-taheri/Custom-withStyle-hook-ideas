
const applyStyles = (stylesObj, parentSelector = '', classMapping = {}) => {
  Object.entries(stylesObj).forEach(([className, styleValue]) => {
    if (typeof styleValue === 'object') {
      applyStyles(styleValue, `${parentSelector} .${className}`, classMapping);
    } else {
      const uniqueClassName = generateUniqueClassName();
      const styleElement = document.createElement('style');
      styleElement.innerHTML = `${parentSelector} .${uniqueClassName} { ${styleValue} }`;
      document.head.appendChild(styleElement);
      classMapping[className] = uniqueClassName;
    }
  });
};
